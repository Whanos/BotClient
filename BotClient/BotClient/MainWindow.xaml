<Window x:Class="BotClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BotClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="132" Width="677">
    <Grid Height="112" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tokenTextBox" HorizontalAlignment="Left" Margin="117,0,0,0" Text="Token" TextWrapping="Wrap" VerticalAlignment="Center" Width="401" TextChanged="textBox_TextChanged" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2" Height="47"/>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Left" Margin="356,0,0,0" VerticalAlignment="Center" Click="button_Click" Height="47" Width="54" Grid.Column="1"/>

    </Grid>
</Window>
